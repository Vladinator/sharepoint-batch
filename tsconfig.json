{
    "compilerOptions": {
        "rootDir": "src",
        "baseUrl": "src",
        "downlevelIteration": true,
        "importHelpers": true,
        "module": "commonjs",
        "outDir": "compiled",
        "sourceMap": true,
        "declaration": false,
        "moduleResolution": "Node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": true,
        "suppressImplicitAnyIndexErrors": true,
        "target": "ES6",
        "typeRoots": [
            "node_modules/@types",
            "src/typings.d.ts"
        ],
        "lib": [
            "ES6",
            "DOM"
        ],
        "strict": true,
        "removeComments": true
    },
    "include": [
        "src/*.ts"
    ],
    "exclude": [
        "node_modules"
    ],
    "compileOnSave": false
}